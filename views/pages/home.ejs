    <script>
        // NEW/FIXED CLIENT-SIDE JAVASCRIPT (e.g., in public/js/script.js)

        document.addEventListener('DOMContentLoaded', () => {

            // Select elements after the DOM is fully loaded
            const slides = document.getElementById("slides");
            const dotsContainer = document.getElementById("dots");

            // Important: Check if elements exist before using them
            if (!slides || !dotsContainer) {
                console.error("Slider elements not found. Check your HTML IDs.");
                return;
            }

            const totalSlides = slides.children.length;
            let index = 0;

            // Create dots dynamically (This logic is fine)
            for (let i = 0; i < totalSlides; i++) {
                const dot = document.createElement("span");
                dot.classList.add("dot");
                if (i === 0) dot.classList.add("active");
                dotsContainer.appendChild(dot);
            }

            const dots = document.querySelectorAll(".dot");

            function updateDots() {
                dots.forEach((dot, i) => {
                    dot.classList.toggle("active", i === index);
                });
            }

            function showSlide() {
                // This is the core movement logic
                slides.style.transform = `translateX(-${index * 100}%)`;
                updateDots();
                index = (index + 1) % totalSlides;
            }

            // Run only on small screens
            if (window.innerWidth <= 768) {
                // Call it once to set the initial position
                showSlide();
                // Then start the interval
                setInterval(showSlide, 3000);
            }
        });
    </script>

